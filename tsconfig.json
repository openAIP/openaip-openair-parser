{
    "compilerOptions": {
        "lib": [
            "esnext"
        ],
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "useUnknownInCatchVariables": false,
        "noImplicitAny": true,
        "noUnusedParameters": false,
        "rootDir": "./src",
        "baseUrl": ".",
    },
    "include": [
        "src"
    ],
    "exclude": [
        "dist",
        "node_modules"
    ]
}
