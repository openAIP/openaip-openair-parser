{
    "include": ["src/**/*"],
    "exclude": ["dist", "node_modules"],
    "compilerOptions": {
        "esModuleInterop": true,
        "strict": true,
        "skipLibCheck": true,
        "forceConsistentCasingInFileNames": true,
        "noImplicitAny": true,
        "noUnusedParameters": false,
        "rootDir": "./src",
        "baseUrl": ".",
        "module": "nodenext",
        "moduleResolution": "nodenext",
        "target": "esnext",
        "outDir": "./dist",
        "declaration": true,
        "declarationDir": "./dist",
        "isolatedModules": true
    }
}
