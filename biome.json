{
    "$schema": "https://biomejs.dev/schemas/2.2.6/schema.json",
    "vcs": {
        "enabled": true,
        "clientKind": "git",
        "useIgnoreFile": true
    },
    "files": {
        "ignoreUnknown": true
    },
    "formatter": {
        "enabled": true,
        "indentStyle": "space",
        "indentWidth": 4,
        "lineEnding": "lf",
        "lineWidth": 120
    },
    "linter": {
        "enabled": true,
        "rules": {
            "correctness": {
                "noUnusedVariables": "off",
                "noUnusedFunctionParameters": "off",
                "useParseIntRadix": "off",
                "noUnusedImports": {
                    "level": "error",
                    "fix": "safe",
                    "options": {}
                }
            },
            "suspicious": {
                "noExplicitAny": "off"
            },
            "complexity": {
                "noBannedTypes": "off"
            }
        }
    },
    "javascript": {
        "formatter": {
            "quoteStyle": "single",
            "semicolons": "always",
            "trailingCommas": "es5",
            "arrowParentheses": "always"
        }
    },
    "assist": {
        "enabled": true,
        "actions": {
            "source": {
                "organizeImports": "on"
            }
        }
    }
}
